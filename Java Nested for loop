package java_topics;

public class NestedFor
{

	public static void main(String[] args)
	{
		
		for(char i=65;i<=67;i++)
		{
			for (char j=65;j<=i;j++)
			{ 
				
				System.out.print(" " +j);
			}
			
			System.out.println();
		}

		   
	}
}



