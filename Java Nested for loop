package java_topics;

public class Pyramid {

	public static void main(String[] args)
	{
		int n=5;
		for(int r=1;r<=5;r++)
		{
			for (int sp=1; sp<=n; sp++)
			{
				System.out.print(" ");
			}
			n--;
			
			for (int p=1;p<=r;p++)
			{
				System.out.print(" " +r);
			}
			System.out.println();
		}

	}

}

